<!-- Products -->
<div class="products">
    <div class="products-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-image">
                    <button class="product-video-btn" data-product-name="@product.Name" data-product-id="@product.Id">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M8 5v14l11-7z"/>
                        </svg>
                    </button>
                    <img src="~/images/products/product.svg" alt="@product.Name">
                    <button class="product-cart-btn">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/>
                        </svg>
                    </button>
                </div>
                <div class="product-info">
                    <span class="product-category">@product.Category</span>
                    <h3 class="product-name">@product.Name</h3>
                    <div class="product-prices">
                        <span class="product-price">@product.Price.ToString("0.00") ₾</span>
                        @if (product.OldPrice.HasValue)
                        {
                            <span class="product-old-price">@product.OldPrice.Value.ToString("0.00") ₾</span>
                        }
                    </div>
                    <div class="product-actions">
                        <div class="quantity-selector" data-product-id="@product.Id">
                            <span class="quantity-value">1</span>
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                            <div class="quantity-dropdown">
                                <div class="quantity-option" data-value="1">1</div>
                                <div class="quantity-option" data-value="2">2</div>
                                <div class="quantity-option" data-value="3">3</div>
                                <div class="quantity-option" data-value="4">4</div>
                                <div class="quantity-option" data-value="5">5</div>
                                <div class="quantity-option" data-value="6">6</div>
                                <div class="quantity-option" data-value="7">7</div>
                                <div class="quantity-option" data-value="8">8</div>
                                <div class="quantity-option" data-value="9">9</div>
                                <div class="quantity-option" data-value="10">10</div>
                            </div>
                        </div>
                        <button class="buy-now-btn">ყიდვა</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

